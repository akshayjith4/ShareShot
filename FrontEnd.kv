<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Camera:
            id: camera
            resolution: (640, 480)
            play: False
            size_hint_y: 0.8
            opacity: 0
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1  # Black background for camera
                Rectangle:
                    pos: self.pos
                    size: self.size
        Button:
            id: camera_button
            text: 'Start Camera'
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            size_hint_y: 0.1
            background_color: 0, 0.5, 0, 1  # Dark green background
            color: 0, 0, 0, 1  # Black text
        Button:
            text: 'Capture'
            on_press: root.capture()
            size_hint_y: 0.1
            background_color: 0, 0.5, 0, 1  # Dark green background
            color: 0, 0, 0, 1  # Black text

<ImageScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Image:
            id: img
            size_hint_y: 0.7
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1  # Black background for image
                Rectangle:
                    pos: self.pos
                    size: self.size
        Button:
            text: 'Create Sharable link'
            on_press: root.create_link()
            size_hint_y: 0.1
            background_color: 0, 0.5, 0, 1  # Dark green background
            color: 0, 0, 0, 1  # Black text
        Label:
            id: link
            text: ''
            size_hint_y: 0.1
            color: 0, 0.5, 0, 1  # Dark green text
        GridLayout:
            cols: 2
            size_hint_y: 0.1
            Button:
                text: 'Copy Link'
                on_press: root.copy_link()
                background_color: 0, 0.5, 0, 1  # Dark green background
                color: 0, 0, 0, 1  # Black text
            Button:
                text: 'Open Link'
                on_press: root.open_link()
                background_color: 0, 0.5, 0, 1  # Dark green background
                color: 0, 0, 0, 1  # Black text

<RootWidget>:
    canvas.before:
        Color:
            rgba: 0, 0.5, 0, 1  # Dark green background
        Rectangle:
            pos: self.pos
            size: self.size
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'
